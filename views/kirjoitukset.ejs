<!DOCTYPE html>
<html lang="fi">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>GameHub - Kirjoitukset</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
<%- include('partials/navbar') %>

<div class="container mt-4">
  <div class="row justify-content-end">
    <div class="col-md-12">
      <a href="/new" class="btn btn-success mb-3">Lisää uusi kirjoitus</a>
    </div>
  </div>
  <h1>Kirjoitukset</h1>
  <div class="row">
    <% posts.forEach(post => { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= post.otsikko %></h5>
            <p class="card-text"><%= post.kuvaus %></p>
            <a href="/post/<%= post._id %>" class="btn btn-primary">Lue lisää</a>
          </div>
        </div>
      </div>
    <% }) %>
